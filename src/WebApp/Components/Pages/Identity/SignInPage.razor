<PageTitle>
    @PageConst.Title.SignIn
</PageTitle>

<MudPaper Height="100%" Class="d-flex align-center justify-center mud-width-full py-8">
    <MudContainer MaxWidth="MaxWidth.Small">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h4">Sign In</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudForm @ref="@_form"
                         Model="@_signInModel"
                         Validation="@(_signinModelValidator.ValidateValue)"
                         ValidationDelay="0">
                    <!---->
                    <!---->
                    <MudTextField @bind-Value="_signInModel.Email"
                                  For="@(() => _signInModel.Email)"
                                  Immediate="true"
                                  Label="Email Address" />
                    <!---->
                    <!---->
                    <MudTextField @bind-Value="_signInModel.Password"
                                  For="@(() => _signInModel.Password)"
                                  Immediate="true"
                                  InputType="@_passwordInputType"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@_passwordInputIcon"
                                  OnAdornmentClick=@PasswordEye_click
                                  AdornmentAriaLabel="Show Password"
                                  Label="Password" />
                    <!---->
                    <!---->
                </MudForm>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Forgot password?</MudButton>
                <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="() => _navigateManager.NavigateTo(RouteConst.Identity.Register)">Register</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@SignIn">Sign in</MudButton>
            </MudCardActions>
        </MudCard>
    </MudContainer>
</MudPaper>
